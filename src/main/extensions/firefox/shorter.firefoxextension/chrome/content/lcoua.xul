 </statusbar>
-->
    <popupset>
        <menupopup>
        </menupopup>
    </popupset>

    <toolbarpalette id="BrowserToolbarPalette">
        <toolbarbutton id="lcoua-toolbar-button" label="l.co.ua" oncommand="handleOnClick();"
            tooltiptext="&runlcoua;" type="panel" class="toolbarbutton-1 chromeclass-toolbar-additional">
            
            <panel id="lcoua-panel" type="arrow"
                noautofocus="true" consumeoutsideclicks="true"
