                level="parent" >

                <vbox id="iframeContainerContainer" align="top"> 
                    <iframe id="lcoua-iframe" width="100" height="100" src="chrome://lcoua/content/iframe.html" type="chrome" />
                </vbox> 
            </panel>
        </toolbarbutton>
    </toolbarpalette>
