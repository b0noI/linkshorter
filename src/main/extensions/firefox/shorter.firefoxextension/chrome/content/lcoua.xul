    </popupset>

    <toolbarpalette id="BrowserToolbarPalette">
        <toolbarbutton id="lcoua-toolbar-button" label="l.co.ua"
            tooltiptext="&runlcoua;" type="panel" class="toolbarbutton-1">
            
