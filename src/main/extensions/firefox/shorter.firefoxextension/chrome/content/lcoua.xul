<?xml version="1.0"?>
<?xml-stylesheet href="chrome://lcoua/skin/skin.css" type="text/css"?>
<!DOCTYPE window SYSTEM "chrome://lcoua/locale/translations.dtd">
<overlay id="lcoua" 
         xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

    <script type="application/javascript"
        src="chrome://lcoua/content/button.js"/>

<!--
 <statusbar id="status-bar">
